{
  "name": "@yt-dlp-gui/database",
  "version": "1.0.001",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.7.1"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.14",
    "lefthook": "2.0.2",
    "tsup": "^8.3.5",
    "turbo": "2.5.8",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "@libsql/client": "^0.15.14"
  }
}
